# Example .env file
# Copy this file to .env and update with your actual values
# This file works for both local development and production (Vercel, etc.)

# Ethereum RPC URL
# For local: use public RPC or your own node
# For production: use a reliable RPC endpoint (Infura, Alchemy, or your own node)
ETHEREUM_RPC_URL=https://ethereum-rpc.publicnode.com

# MongoDB Connection String
# For local development: mongodb://localhost:27017/ethereum_indexer
# For production: Use MongoDB Atlas connection string
MONGODB_URI=mongodb://localhost:27017/ethereum_indexer

# MongoDB Atlas example (uncomment and fill in):
# MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/ethereum_indexer?retryWrites=true&w=majority

# Indexer Configuration
# Start block number - the indexer will start syncing from this block
# Set to 0 to start from genesis, or any specific block number
# For faster initial sync, use a recent block number (e.g., 23756000)
START_BLOCK=0

# Batch size - number of blocks to process per sync cycle
# Adjust based on your RPC rate limits (10-20 is safe for public RPCs)
INDEXER_BATCH_SIZE=10

# Sync interval in milliseconds (for continuous sync service)
# 5000 = 5 seconds
SYNC_INTERVAL=5000
